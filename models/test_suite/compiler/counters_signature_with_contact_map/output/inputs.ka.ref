%def: "seed" "92067277"
%def: "dumpIfDeadlocked" "true"
%def: "maxConsecutiveClash" "2"
%def: "progressBarSize" "60"
%def: "progressBarSymbol" "#"
%def: "plotPeriod" "1" "t.u."
%def: "outputFileName" "data.csv"


%agent: A(x[x.B] c{=0/+=3} d{=1/+=2})
%agent: B(x[x.A] c{=0/+=3})

%plot: [T]
'r1' B(x[./1]), A(x[./1]) @ 1
'r2' B(x[1/.] c{>=0/+=1}), A(x[1/.] c{>=0/+=1}) @ 1

/*0*/%mod: (|B(c{=4})| = 1) do $PRINTF "
Counter c of agent B reached maximum
"; $STOP "counter_perturbation.ka"; repeat [false]
/*1*/%mod: (|A(d{=3})| = 1) do $PRINTF "
Counter d of agent A reached maximum
"; $STOP "counter_perturbation.ka"; repeat [false]
/*2*/%mod: (|A(c{=4})| = 1) do $PRINTF "
Counter c of agent A reached maximum
"; $STOP "counter_perturbation.ka"; repeat [false]

%init: 10 A(x[.] c{=0} d{=1})
%init: 10 B(x[.] c{=0})

%mod: [E] = 39 do $STOP;
